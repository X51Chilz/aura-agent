[Unit]
Description=Aura Agent Email Poller
After=network.target

[Service]
Type=simple
User=peter
WorkingDirectory=/home/peter/aura_agent
Environment="PATH=/home/peter/aura_agent/venv/bin:/usr/bin"
ExecStart=/home/peter/aura_agent/venv/bin/python3 /home/peter/aura_agent/email_poller.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
